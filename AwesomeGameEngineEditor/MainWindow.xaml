<Window x:Class="AwesomeGameEngineEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Awesome Game Engine v0" Width="1024" Height="768">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!-- Main menu -->
        <ToolBarTray Grid.Row="0" Grid.ColumnSpan="3">
            <ToolBar Band="0" BandIndex="1">
                <Button>
                    <StackPanel>
                        <Image Source="Icons/Project.png" />
                        <Label>New Project</Label>
                    </StackPanel>
                </Button>
            </ToolBar>
        </ToolBarTray>

        <!-- Custom control -->
        <ContentControl Name="EditorView" ClipToBounds="True"
                        Grid.Row="1" Grid.RowSpan="3" Grid.Column="0"
                        Margin="10" />

        <TextBlock Grid.Column="1" Grid.Row="0" Name="Log"></TextBlock>
    </Grid>
</Window>
